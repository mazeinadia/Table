.tabs {
  display: flex;
  flex-direction: row;
  width: 100%;
  border-bottom: 3px solid lightblue;
  text-align: center;

  > .tab {
    text-align: center;
    padding: 20px 30px;
    font-size: 24px;
    font-weight: 500;
    letter-spacing: 1px;
    color: #555;
    cursor: pointer;
    display: inline-block;

    &:hover {
      color: #222;
      padding: 10px 30px 30px 30px;
    }
  }
}